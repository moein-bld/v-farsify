{
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "ESNext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "jsxImportSource": "vue",
    "noImplicitThis": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [],
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
